@model PortfolioViewModel
@{
    var Title = "Create New Template";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex" id="wrapper">

    <partial name="_AdminNavbar" />
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">

        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
            <a class="btn btn-info" asp-controller="Portfolio" asp-action="Index">Go Back To List</a>
        </nav>
        <div class="container-fluid">
            <form asp-controller="Portfolio" asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.Id != 0)
                {
                    //Edit
                    Title = "Edit Template";
                }

                <input asp-for="Id" type="hidden" />
                <h2>@Title</h2>
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Type</label>
                    <input class="form-control" asp-for="Type" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Details</label>
                    <input class="form-control" asp-for="Details" />
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Language</label>
                    <input class="form-control" asp-for="Language" />
                    <span asp-validation-for="Language" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Link</label>
                    <input class="form-control" asp-for="Link" />
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Category</label>
                    <select class="form-control" asp-for="Category">
                        <option value="Angular">Angular App</option>
                        <option value="Js">Js Templates</option>
                        <option value="Core">Asp.net Core</option>
                        <option value="Data">DataTables</option>
                        <option value="Net-core">Net-core</option>
                        <option value="Web-design">Web-design</option>
                    </select>
                </div>
                @if (Model.Id != 0)
                {
                    <div class="col-3 offset-1 pt-4">
                        <img src="/content/blog/@Model.CurrentImage" width="100" style="border-radius:5px; border:1px solid #bbb9b9" />
                    </div>
                }
                <div class="form-group">
                    <label>Image</label>
                    <br />
                    <input class="btn btn-primary" asp-for="CurrentImage" type="hidden" />
                    <input class="btn btn-outline-info" asp-for="PortfolioPhoto" />
                    <span asp-validation-for="CurrentImage" class="text-danger"></span>
                </div>
                <input class="btn btn-primary btn-group-lg" type="submit" value="Submit" />
            </form>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/lib/js/menutoggle.js"></script>
}