@model MemberViewModel

@{ var Title = "Create Member";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
    
}

<div class="d-flex" id="wrapper">

    <partial name="_AdminNavbar" />
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">

        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
        </nav>
        <div class="container-fluid">
            <form asp-controller="Members" asp-action="Edit" method="post" enctype="multipart/form-data">
                @if (Model.Id != 0)
                {
                    //Edit
                    Title = "Edit Member";
                }
                <h2>@Title</h2>
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <label>Username</label>
                    <input class="form-control" asp-for="UserName" />
                </div>
                <div class="form-group">
                    <label>Birthday</label>
                    <input class="form-control" asp-for="DateOfBirth" />
                </div>
                <div class="form-group">
                    <label>KnownAs</label>
                    <input class="form-control" asp-for="KnownAs" />
                </div>
                <div class="form-group">
                    <label>Gender</label>
                    <select class="form-control" asp-for="Gender">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Introduction</label>
                    <textarea class="form-control" id="editor" asp-for="Introduction"></textarea>
                </div>
                <div class="form-group">
                    <label>Looking For</label>
                    <input class="form-control" asp-for="LookingFor" />
                </div>
                <div class="form-group">
                    <label>Interests</label>
                    <input class="form-control" asp-for="Interests" />
                </div>
                <div class="form-group">
                    <label>Country</label>
                    <input class="form-control" asp-for="Country" />
                </div>
                <div class="form-group">
                    <label>City</label>
                    <input class="form-control" asp-for="City" />
                </div>
                @if (Model.Id != 0)
                {
                    <div class="col-3 offset-1 pt-4">
                        <img src="/content/blog/@Model.CurrentImage" width="100" style="border-radius:5px; border:1px solid #bbb9b9" />
                    </div>
                }
                <div class="form-group">
                    <label>Image</label>
                    <br />
                    <input class="btn btn-primary" asp-for="CurrentImage" type="hidden" />
                    <input class="btn btn-outline-info" asp-for="Photo" />
                </div>
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit" />
            </form>
        </div>
    </div>
</div>

