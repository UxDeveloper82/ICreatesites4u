                        <a class="social-icon" href="#"><i class="fa fa-github"></i></a>
                        <a class="social-icon" href="#"><i class="fa fa-twitter"></i></a>
                        <a class="social-icon" href="#"><i class="fa fa-facebook-f"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="tabs">
                <ul class="tabs-list">
                    <li class="active"><a href="#tab1">About @Model.UserName</a></li>
                    <li><a href="#tab2">@Model.UserName Expertise</a></li>
                    <li><a href="#tab3">@Model.UserName Technologies</a></li>
                </ul>
                <div id="tab1" class="tab active">
